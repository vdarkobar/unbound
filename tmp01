# Create VM with the following hostname: unb01, check the hostname

cat /etc/hosts

127.0.1.1 localhost
127.0.1.1 unb01

# Check package version (Unbound 1.18.0 (Current version))
apt search unbound

# # Check installed package version
sudo apt info unbound

sudo apt install -y unbound && \
sudo systemctl is-enabled unbound && \
sudo systemctl status unbound

sudo nano /etc/unbound/unbound.conf

#####################################################################
# Basic Configuration

# Adding DNS-Over-TLS support
server:
    use-syslog: yes
    username: "unbound"
    directory: "/etc/unbound"
    tls-cert-bundle: /etc/ssl/certs/ca-certificates.crt
    auto-trust-anchor-file: "/var/lib/unbound/root.key"
    
    do-ip6: no
    interface: 127.0.0.1
    port: 53
    prefetch: yes

    root-hints: /usr/share/dns/root.hints
    harden-dnssec-stripped: yes

# Send minimal amount of information to upstream servers to enhance privacy
    qname-minimisation: yes

# Enable DNS Cache
    cache-max-ttl: 14400
    cache-min-ttl: 1200

# Unbound Privacy and Security
    aggressive-nsec: yes
    hide-identity: yes
    hide-version: yes
    use-caps-for-id: yes

# Define Private Network and Access Control Lists (ACLs)
    private-address: 192.168.0.0/16
    private-address: 169.254.0.0/16
    private-address: 172.16.0.0/12
    private-address: 10.0.0.0/8
    private-address: fd00::/8
    private-address: fe80::/10

    # control which clients are allowed to make (recursive) queries
    access-control: 127.0.0.1/32 allow_snoop
    access-control: ::1 allow_snoop
    access-control: 127.0.0.0/8 allow
    access-control: 192.168.10.0/24 allow

# Setup Local Domain

    # Ignore chain of trust. Domain is created as insecure.
    domain-insecure: "lan.home-network.me"

    # local zone
    local-zone: "lan.home-network.me." static

    local-data: "pve01.lan.home-network.me.  IN A 192.168.1.12"
    local-data: "pve02.lan.home-network.me.  IN A 192.168.1.12"
    local-data: "pve03.lan.home-network.me.    IN A 192.168.1.13"

    local-data-ptr: "192.168.1.11  pve01.lan.home-network.me"
    local-data-ptr: "192.168.1.12  pve02.lan.home-network.me"
    local-data-ptr: "192.168.1.13  pve03.lan.home-network.me"

# Unbound Performance Tuning and Tweak
    num-threads: 4
    msg-cache-slabs: 8
    rrset-cache-slabs: 8
    infra-cache-slabs: 8
    key-cache-slabs: 8
    rrset-cache-size: 256m
    msg-cache-size: 128m
    so-rcvbuf: 8m

# Setup Unbound as a DNS Resolver with DNS-over-TLS (DoT)
forward-zone:
    name: "."
    forward-ssl-upstream: yes
    ## Also add IBM IPv6 Quad9 over TLS
    forward-addr: 9.9.9.9@853#dns.quad9.net
    forward-addr: 149.112.112.112@853#dns.quad9.net

remote-control:
    # enable remote-control
    control-enable: yes

#####################################################################

# Creates the cryptographic keys necessary for the control option
sudo unbound-control-setup

# Flush Specific Host
unbound-control flush www.youtube.com

# Flush everything
unbound-control flush_zone .

sudo unbound-checkconf

sudo systemctl restart unbound

sudo ufw app list
sudo ufw allow DNS
sudo ufw allow 53/udp comment "DNS"
sudo ufw status numbered
sudo ufw delete 3

# Unbound Log via Rsyslog and Logrotate

sudo apt install rsyslog -y
sudo nano /etc/rsyslog.d/unbound.conf

# Log messages generated by unbound application 
if $programname == 'unbound' then /var/log/unbound.log
# stop processing it further
& stop

sudo systemctl restart rsyslog

sudo nano /etc/logrotate.d/unbound

/var/log/unbound.log {
  daily
  rotate 7
  missingok
  create 0640 root adm
  postrotate
    /usr/lib/rsyslog/rsyslog-rotate
  endscript
}

sudo systemctl restart logrotate

###############################################################
# Setting DNS Resolver on Linux Client

sudo apt install resolvconf -y

sudo systemctl start resolvconf.service && \
sudo systemctl enable resolvconf.service && \
sudo systemctl status resolvconf.service

sudo nano /etc/resolvconf/resolv.conf.d/head

# add
nameserver 127.0.0.1


sudo resolvconf --enable-updates
sudo resolvconf -u

sudo nano /etc/resolv.conf

###############################################################
sudo systemctl restart unbound

# Testing Unbound clear
DNS Server

dig @127.0.0.1
dig github.com
dig duckduckgo.com

dig pve02.home.lan +short

# Test DNSSEC Validation:

# Verify DoT (DNS over TLS) via tcpdump
sudo apt install tcpdump -y

# run the below tcpdump command to monitor traffics on the interface 'eth0' with DoT port 853
sudo tcpdump -vv -x -X -s 1500 -i ens18 'port 853'

# Move to the client machine and run the below command to access external/internet domain
# After that, move back to the Unbound server and you should now get an output similar to this on the tcpdump output

dig google.com

# If DNSSEC is functioning correctly, you should NOT get an IP address in response 
# to a query for www.dnssec-failed.org, and in the status section of the output, 
# you might see SERVFAIL.

dig @localhost www.dnssec-failed.org A +dnssec


# Ensure you get an A record in response and there is an ad (authenticated data) flag in the flags section, 
# indicating the data was DNSSEC validated.

dig @localhost ietf.org A +dnssec



